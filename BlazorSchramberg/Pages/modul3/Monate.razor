@page "/monate"
<h3>Monate</h3>
<div class="container">
    <div class="row">
        <div class="col">
            gewählt:@Monat
        </div>
        <div class="col">
            <ul class="list-group">
                <li class="list-group-item active">Monate</li>
                @for (int i = 0; i < 12; i++)
                {
                    int x = i;
                    <li class="list-group-item list-group-item-action"
                        @onclick="()=>auswahl(x)"
                        >
                        @DateTime.Now.AddMonths(i).ToString("MMMM")
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

@code {
    string Monat;
    void auswahl(int m)
    {
        Monat = DateTime.Now.AddMonths(m).ToString("MMMM");

    }

}

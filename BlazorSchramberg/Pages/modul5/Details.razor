@page "/details"
@page "/details/{id}"
<h3>Details</h3>
<EditForm EditContext="_editcontext" OnSubmit="save">
    <DataAnnotationsValidator></DataAnnotationsValidator>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <InputText class="form-control" @bind-Value="p.Name"></InputText>
            <ValidationMessage For="()=>p.Name"></ValidationMessage>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Größe</label>
        <div class="col-sm-10">
            <InputNumber class="form-control" @bind-Value="p.Gross"></InputNumber>
            <ValidationMessage For="()=>p.Gross"></ValidationMessage>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Geb Datum</label>
        <div class="col-sm-10">
            <InputDate class="form-control" @bind-Value="p.GebDatum"></InputDate>
            <ValidationMessage For="()=>p.GebDatum"></ValidationMessage>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">save</button>
    <ValidationSummary></ValidationSummary>
</EditForm>

@code {
    [Parameter]
    public string id { get; set; }
    Person p = new Person();

    EditContext _editcontext;
    void save()
    {

    }
    protected override void OnInitialized()
    {
        _editcontext = new EditContext(p);
        _editcontext.SetFieldCssClassProvider(new InputErrorfixBoostrapFieldClassCssProvider());
    }
}
